<htmlform formName="HMIS ACP 007 Missed Appointment Tracking Form"
          formDescription="Record all cleints who missed their appointment"
          formEncounterType="6d88e370-f2ba-476b-bf1b-d8eaf3b1b67e"
          formUuid="59d9341a-f65e-4e86-a98b-415ea54dfa81"
          formVersion="3.0"
          formAddMetadata="yes"
          formUILocation="patientDashboard.visitActions"
          formOrder="2"
          formIcon="icon-medkit"
          formShowIf="(visit.active || !visit.active) &amp;&amp; patient.person.dead==false &amp;&amp; sessionLocation.uuid=='86863db4-6101-4ecf-9a86-5e716d6504e4'"
          formDisplayStyle="Standard"
          formLabel="Missed Appointment Tracking Form">

    <div class="poc-page-frame">
         <div class="row">
            <div class="col-md-6">
                <h3>Missed Appointment Register</h3>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-2"><submit/></div>
        </div>
        <div class="card col-md-12">
            <div class="card-header">
                Registration Information
            </div>
            <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label>Missed Appointment Date: </label><br/>
                    <encounterDate default="today" disallowMultipleEncountersOnDate="block"/>
                    <br/>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label>Service Point:</label>
                    <div class="row">
                        <div class="col-md-3">
                            <obs conceptId="164993" answerConceptId="165047" answerLabel="ART Clinic" style="checkbox" class="horizontal-layout-options"/>
                        </div>
                        <div class="col-md-2">
                            <obs conceptId="164993" answerConceptId="165048" answerLabel="TB Clinic" style="checkbox" class="horizontal-layout-options"/>
                        </div>
                        <div class="col-md-5">
                            <obs conceptId="164993" answerConceptId="90002" style="checkbox" answerLabel="Other Specify:" commentFieldLabel="" class="horizontal-layout-options"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label>Medications due for Refill: </label>
                    <div class="row">
                        <div class="col-md-2">
                            <obs conceptId="160288" answerConceptId="164972" answerLabel="ART Refill" style="checkbox" class="horizontal-layout-options"/>
                        </div>
                        <div class="col-md-2">
                            <obs conceptId="160288" answerConceptId="164971" answerLabel="TB Meds/TPT" style="checkbox" class="horizontal-layout-options"/>
                        </div>
                        <div class="col-md-5">
                            <obs conceptId="160288" answerConceptId="90002" style="checkbox" answerLabel="Other Specify:" commentFieldLabel="" class="horizontal-layout-options"/> <br/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label>Mode of Care:</label><br/>
                    <obs conceptId="165143" />
                </div>
                <div class="col-md-4">
                    <label>Next of Kin Contact:</label> <br/>
                    <obs conceptId="165052" />
                </div>
            </div>
            </div>
        </div>


        <div class="card col-md-12">
         <div class="card-header">
                Tracking Information
            </div>
        <div class="card-body">
        <div class = "row">
        <div class = "col-md-4">
            <label>Follow Up Attempt</label><br/>
        </div>
        <div class = "col-md-4">
            <label>Follow Up Date</label><br/>
        </div>
            <div class = "col-md-4">
                <label>Follow Up Person<span class="required">*</span></label><br/>
                <encounterProvider required="true"/>
            </div>
        </div>


         <div class = "row">
            <div class = "col-md-4">
                <label>Follow Up Action</label>
                <obs id="phone-call" conceptId="165100" answerConceptId="165102" answerLabel="Phone Call to Client" style="dropdown" class="horizontal-layout-options"/><br/>
                <obs id="home-visit" conceptId="165100" answerConceptId="165103" answerLabel="Home/Workplace Visit" style="dropdown" class="horizontal-layout-options"/><br/><br/>
                <obs id="followup-type-other" conceptId="165100" answerConceptId="5622" answerLabel="Other Specify:" commentFieldLabel="" class="vertical-layout-options"/>
            </div>
           <div class = "col-md-4">
                <label>Follow Up Outcome</label><br/>
            </div>
            <div class = "col-md-4">
                <label>Date Returned</label>
            </div>
         </div>

        <div class = "row">
            <div class = "col-md-4">
                <label>Cause of Death</label><br/>
                  <obs conceptId="5002" />
            </div>
           <div class = "col-md-4">
                <label>Comment</label><br/>
                <obs conceptId="159395"
                     class="commenttextarea"
                     style="textarea"
                />
            </div>
         </div>
         </div>
         </div>
    </div>
</htmlform>
